<h1>Bookings open now:</h1>
<br><br>
<table class="table">

  <thead>
    <tr>
      <th scope = "col">Venue</th>
      <th scope = "col">Booked by</th>
      <th scope = "col">From</th>
      <th scope = "col">To</th>
      <th scope = "col">Action</th>
    </tr>
  </thead>

  <tbody>
  <% Book.all.each do |b| %>
    <tr>
        <th scope = "row"><%= b.venue.title %></th>
      <td><%= b.user.name %></td>
      <td><%= b.try(:start_time).try(:strftime, ("%m/%d/%Y, %H:%M"))%></td>
      <td><%= b.try(:end_time).try(:strftime, ("%m/%d/%Y, %H:%M"))%></td>
      <td><div class="bg-light border"><%= button_to "Delete", book_path(b), method: :delete, data: { confirm: "Are you sure?" } , class: "btn btn-primary"%></div></td>
    </tr>
    <% end %>
   </tbody> 
</table>
<br><br>

<div class="d-flex align_items-center justify-content-center">
    <%= button_to "New Booking", "/books/new", method: :get, class: "btn btn-primary"%>
</div>
  
      

